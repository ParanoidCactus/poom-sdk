actor ZombieMan : Monster 3004
{
  Health 20
  Radius 20
  Height 56
  Speed 8
  PainChance 200
  // DropItem "Clip"
  States
  {
  Spawn:
    SPOS A 10 A_Look;
    Loop
  See:
    SPOS A 8
	SPOS B 8 A_Chase;
    Loop
  Missile:
    SPOS E 9 A_FaceTarget;
	SPOS E 1 A_PlaySound(55);
    SPOS F 8 A_FireBullets(0, 0, 1, 9, "BulletPuff"); //22.5
    SPOS E 8
    Goto See
  Death:
    SPOS H 5
    SPOS I 5 // A_Scream
    SPOS J 5 //A_NoBlocking
    SPOS K -1
    Stop
  }
}

