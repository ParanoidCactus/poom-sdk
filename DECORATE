actor PlasmaRifle : Weapon 2004
{
	AmmoUse 1
	AmmoGive 40
	AmmoType "Cell"
	SlotNumber 5
	AttackSound 58
	States {
		Spawn:
			PLAS A 5
			PLAS A 5 Bright
			Loop
		Fire:
			PLSG A 3 A_FireProjectile("PlasmaBall");
			PLSG B 5
			Goto Ready
		Ready:
			PLSG A 1 A_WeaponReady;
			Loop
	}
}

actor ShotGun : Weapon 2001
{
	AmmoUse 1
	AmmoGive 8
	AmmoType "Shell"
	SlotNumber 2
	AttackSound 56
	States {
		Spawn:
			SHOT A 5
			SHOT A 5 Bright
			Loop
		Fire:
			SHTG A 3 A_Light(160)
			SHTG A 5 A_FireBullets(10,0,3,7,"BulletPuff");
			SHTG B 15 A_Light(0)
			SHTG A 9
			Goto Ready
		Ready:
			SHTG A 1 A_WeaponReady;
			Loop
	}
}

