actor PlasmaRifle : Weapon 2004
{
	AmmoUse 1
	AmmoGive 40
	AmmoType "Cell"
	SlotNumber 4
	AttackSound 58
	States {
		Spawn:
			PLAS A 5
			PLAS A 5 Bright
			Loop
		Fire:
			PLSG A 3 A_FireProjectile("PlasmaBall");
			PLSG A 4
			Goto Ready
		Ready:
			PLSG A 1 A_WeaponReady;
			Loop
	}
}

